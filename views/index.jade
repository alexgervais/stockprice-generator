extends layout

block content
    h1= title
    div#chartContainer(style='height: 300px; width: 600px;')
    script.
        window.onload = function () {
            var chart = new CanvasJS.Chart("chartContainer",
                    {
                        zoomEnabled: true,
                        title: {
                            text: '#{file}'
                        },
                        animationEnabled: true,
                        axisX: {
                            labelAngle: 30
                        },
                        axisY: {
                            includeZero: false
                        },
                        data: !{JSON.stringify(data)}
                    });
            chart.render();
        }
